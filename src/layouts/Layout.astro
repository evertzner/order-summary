---
import '../styles.css';
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon-32x32.png' />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Red+Hat+Display:ital,wght@0,300..900;1,300..900&display=swap'
      rel='stylesheet'
    />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class='relative grid h-screen place-content-center bg-[#E0E8FF] px-6 py-[72px]'>
    <picture class='absolute left-0 right-0 top-0 -z-10'>
      <source media='(max-width: 1439px)' srcset='/pattern-background-mobile.svg' />
      <source media='(min-width: 1440px)' srcset='/pattern-background-desktop.svg' />
      <img src='/pattern-background-mobile.svg' alt='Background image' class='w-full' />
    </picture>
    <slot />
  </body>
</html>
